<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="astro.grpc.server.dao.MariaDAO">

    <insert id="createTable" parameterType="String">
        CREATE TABLE IF NOT EXISTS data.${table} (
            uuid CHAR(50) NOT NULL,
            datetime DATETIME NOT NULL,
            `index` INT(11) NOT NULL,
            topic CHAR(50) NOT NULL,
            message LONGTEXT NULL,
            PRIMARY KEY (uuid)
        );
    </insert>

    <insert id="insert" useGeneratedKeys="true" keyProperty="list_id">
        INSERT INTO ${table} VALUES (#{astroMessage.uuid}, #{astroMessage.datetime}, #{astroMessage.index}, #{astroMessage.topic}, #{astroMessage.message});
    </insert>
</mapper>