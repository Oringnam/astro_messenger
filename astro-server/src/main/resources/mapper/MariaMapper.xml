<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="astro.grpc.server.dao.MariaDAO">
    <resultMap id="result" type="astro.grpc.server.domain.AstroMessage">
        <result property="uuid" column="uuid"/>
        <result property="datetime" column="datetime"/>
        <result property="index" column="index"/>
        <result property="topic" column="topic"/>
        <result property="message" column="message"/>
    </resultMap>

    <!--<select id="connectionTest" parameterType="string" resultType="integer">-->
        <!--SELECT 1 FROM #{table};-->
    <!--</select>-->

    <insert id="createTable" parameterType="String">
        CREATE TABLE IF NOT EXISTS data.${table} (
            uuid CHAR(50) NOT NULL,
            datetime DATETIME NOT NULL,
            `index` INT(11) NOT NULL,
            topic CHAR(50) NOT NULL,
            message LONGTEXT NULL,
            PRIMARY KEY (uuid)
        );
    </insert>

    <insert id="insert" useGeneratedKeys="true" keyProperty="list_id">
        INSERT INTO #{table} VALUES (#{astroMessage.uuid}, #{astroMessage.datetime}, #{astroMessage.index}, #{astroMessage.topic}, #{astroMessage.message});
    </insert>
</mapper>